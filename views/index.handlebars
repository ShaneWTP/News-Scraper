<div class="container">
    <div class="jumbotron">
        <div class="container" >
            <h1 id="header">Rolling Stone Scraper</h1>
        <p id="buttons">
            <a class="btn btn-success btn-md" role="button" href="/">Home</a>
        </p>
        <p id="buttons">
            <a class="btn btn-success btn-md" role="button" href="/saved">Saved Articles</a>
        </p>
        <p id="buttons">
            <a class="btn btn-success btn-md" role="button">Scrape</a>
        </p>
    </div>
</div>
<div class="col-md-12">
    {{#if article}}
    {{#each article}}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>{{this.title}}</h4>
        </div>
        <div class="panel-body">
            <h5> {{this.summary}}</p>
                <a href={{this.link}} target="_blank">{{this.link}}</a>
                <br><br>
                <button type="button" class="btn btn-md btn-success save" data-id={{this._id}}>Save Article</button>
        </div>
    </div>
    {{/each}}
    {{else}}
    <div class="panel panel-default">
        <div class="panel-body">
            <h4>There are no articles currently available. Try scraping for more!</h4>
        </div>
    </div>
    {{/if}}
</div>
</div>