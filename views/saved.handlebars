<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1 id="header">Saved Articles</h1>
            <p id="buttons">
                <a class="btn btn-success btn-md" role="button" href="/">Home</a>
            </p>
            <p id="buttons">
                <a class="btn btn-success btn-md" role="button" href="/saved">Saved Articles</a>
            </p>
            <p id="buttons">
                <a class="btn btn-success btn-md" role="button" id="scrape">Scrape</a>
            </p>
        </div>
    </div>
    <div class="col-md-12">
        {{#if article}}
        {{#each article}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>{{this.title}}</h4>
            </div>
            <div class="panel-body">
                <p> {{this.summary}}</p>
                <a href={{this.link}} target="_blank">{{this.link}}</a>
                <br><br>
                <button type="button" class="btn btn-success addNote" data-toggle="modal"
                    data-target="#noteModal{{this._id}}" data-id={{this._id}}>View/Add Notes</button>
                <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>There are currently no articles saved.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>